<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="30dp"
    tools:context="com.example.isaquearaujo.apporganizaenem.TelaMateriaPendente">

    <RelativeLayout
        android:id="@+id/layoutmateria1pd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:background="@drawable/barrinha"
            android:textSize="25dp"
            android:textColor="#004962"
            android:paddingLeft="10dp"
            android:id="@+id/materia1pd"
            android:layout_width="match_parent"
            android:layout_height="33dp" />
        <ListView
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_below="@id/materia1pd"
            android:id="@+id/listamateria1pd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </RelativeLayout>

</RelativeLayout>
