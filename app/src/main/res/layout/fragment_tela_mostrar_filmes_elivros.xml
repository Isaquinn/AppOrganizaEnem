<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.isaquearaujo.apporganizaenem.TelaMostrarFilmesELivros">
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:background="#0d567f"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/piru"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="0%"
        app:layout_marginLeftPercent="0%"
        android:textColor="#ffffff"
        android:textSize="24dp"/>
    <ScrollView
        android:layout_below="@id/piru"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="30dp"
                android:src="@drawable/olga"
                android:id="@+id/imagemfilmeoulivro"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/titlelivrooufilme"
                android:layout_below="@id/imagemfilmeoulivro"
                android:textSize="25dp"
                android:text="OLGA"
                android:textAlignment="center"
                android:textColor="#0d567f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#004c66"
                android:paddingTop="2.5dp"
                android:id="@+id/buttondescricao"
                android:layout_marginTop="15dp"
                android:layout_below="@id/titlelivrooufilme"
                android:paddingLeft="10dp"
                android:textSize="25dp"
                android:text="Descrição"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/barrinha"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <TextView
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/buttondescricao"
                android:id="@+id/textodescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#004c66"
                android:paddingTop="2.5dp"
                android:id="@+id/buttonmateriarelacionada"
                android:layout_below="@id/textodescricao"
                android:paddingLeft="10dp"
                android:textSize="25dp"
                android:text="Matéria Relacionada"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/barrinha"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <TextView
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/buttonmateriarelacionada"
                android:id="@+id/textomateriarelacionada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"  />
            <TextView
                android:textColor="#004c66"
                android:id="@+id/buttonproducao"
                android:layout_below="@id/textomateriarelacionada"
                android:paddingTop="2.55dp"
                android:paddingLeft="10dp"
                android:textSize="25dp"
                android:text="Produção"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/barrinha"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <TextView
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/buttonproducao"
                android:id="@+id/textoproducao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </ScrollView>
    </android.support.percent.PercentRelativeLayout>

</RelativeLayout>
