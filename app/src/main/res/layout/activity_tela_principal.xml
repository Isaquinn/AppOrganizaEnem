<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_tela_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.isaquearaujo.apporganizaenem.TelaPrincipal">
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/openmenu"
            android:background="@drawable/menu"
            app:layout_widthPercent="6.2%"
            app:layout_heightPercent="3%"
            app:layout_marginTopPercent="6.5%"
            app:layout_marginLeftPercent="4.0%"/>
        <android.support.v4.widget.DrawerLayout  android:id="@+id/drawer_layout"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:fitsSystemWindows="true" tools:openDrawer="start">
            <com.example.isaquearaujo.apporganizaenem.NonSwipeableViewPager
                android:id="@+id/viewpagerprincipal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></com.example.isaquearaujo.apporganizaenem.NonSwipeableViewPager>
            <RelativeLayout
                android:id="@+id/drawerPane"
                android:layout_gravity="start" android:fitsSystemWindows="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <LinearLayout
                    android:weightSum="1.0"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <RelativeLayout
                        android:layout_weight="0.92"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="1.0">
                            <LinearLayout
                                android:background="#0d567f"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".31">
                                <android.support.percent.PercentRelativeLayout
                                    android:background="#0d567f"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:src="@drawable/logo_conf"
                                        app:layout_widthPercent="55%"
                                        app:layout_heightPercent="75%"
                                        app:layout_marginTopPercent="10%"
                                        app:layout_marginLeftPercent="18.5%"/>
                                    <TextView
                                        android:textColor="#ffffff"
                                        android:textSize="16dp"
                                        android:text="OrganizaEnem"
                                        app:layout_widthPercent="50%"
                                        app:layout_heightPercent="15%"
                                        app:layout_marginTopPercent="82.5%"
                                        app:layout_marginLeftPercent="5%"/>
                                </android.support.percent.PercentRelativeLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:background="#0d567f"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".69">
                                <ListView
                                    android:id="@+id/navList"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_below="@+id/profileBox"
                                    android:choiceMode="singleChoice"
                                    android:background="#ffffffff" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

        </android.support.v4.widget.DrawerLayout>
    </android.support.percent.PercentRelativeLayout>
</RelativeLayout>
